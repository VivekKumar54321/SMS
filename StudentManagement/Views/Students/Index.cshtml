@model IEnumerable<StudentManagement.Models.Student>

@{
    ViewBag.Title = "Students";
}

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>



@using (Html.BeginForm("Index", "Students"))
{
    <p>
        Search : @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
        <input type="submit" value="Ok" />
    </p>
}



<table class="table table-bordered table-hover">
    <thead class="thead-light">
        <tr>
            <th>
                @Html.ActionLink("Name", "Index", new { sortOrder = ViewBag.NameSortParm })

                @*@Html.DisplayNameFor(model => model.Name)*@
            </th>
            <th>
                @Html.ActionLink("FatherName", "Index", new { sortOrder = ViewBag.FatherNameSortParm })

                @* @Html.DisplayNameFor(model => model.FatherName)*@
            </th>
            <th>
                @Html.ActionLink("Gender", "Index", new { sortOrder = ViewBag.Gender })

                @*  @Html.DisplayNameFor(model => model.Gender)*@
            </th>
            <th>
                @Html.ActionLink("Address", "Index", new { sortOrder = ViewBag.Address })

                @*@Html.DisplayNameFor(model => model.Address)*@
            </th>
            <th>
                @Html.ActionLink("Email", "Index", new { sortOrder = ViewBag.Email })

                @*@Html.DisplayNameFor(model => model.Email)*@
            </th>
            <th>
                @Html.ActionLink("PhoneNo", "Index", new { sortOrder = ViewBag.PhoneNo })

                @*@Html.DisplayNameFor(model => model.PhoneNo)*@
            </th>
            <th>
                @Html.ActionLink("DOB", "Index", new { sortOrder = ViewBag.DOB })

                @*@Html.DisplayNameFor(model => model.DOB)*@
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FatherName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNo)
                    @Html.ValidationMessageFor(model => item.PhoneNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DOB)
                </td>
                <td>
                    <a asp-action="Edit" class="btn btn-outline-primary" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" class="btn btn-outline-success" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" class="btn btn-outline-danger" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
